<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    tools:context=".Activity_Post_Quiz">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:paddingTop="@dimen/_20sdp"
            android:paddingBottom="@dimen/_20sdp"
            android:paddingLeft="@dimen/_10sdp"
            android:paddingRight="@dimen/_10sdp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/signuotext"
                android:layout_width="wrap_content"
                android:layout_gravity="center_horizontal"
                android:padding="@dimen/_7sdp"
                android:layout_height="wrap_content"
                android:text="Quiz"
                android:textColor="#fff"
                android:fontFamily="casual"
                tools:layout_editor_absoluteX="160dp"
                tools:layout_editor_absoluteY="50dp"
                android:textSize="40dp"
                android:background="@drawable/but"
                android:gravity="center"
                android:layout_marginBottom="@dimen/_25sdp"/>
            <TextView
                android:id="@+id/textview1"
                android:text=""
                android:textSize="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/q1"
                android:hint="Question 1"
                android:paddingLeft="@dimen/_5sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/q1a1"
                    android:layout_margin="@dimen/_1sdp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:hint="Answer 1"
                    android:layout_height="wrap_content" />
                <EditText
                    android:id="@+id/q1a2"
                    android:layout_margin="@dimen/_1sdp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:hint="Answer 2"
                    android:layout_height="wrap_content" />
                <EditText
                    android:id="@+id/q1a3"
                    android:layout_margin="@dimen/_1sdp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:hint="Answer 3"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <EditText
                android:id="@+id/q2"
                android:hint="Question 2"
                android:paddingLeft="@dimen/_5sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/q2a1"
                    android:layout_margin="@dimen/_1sdp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:hint="Answer 1"
                    android:layout_height="wrap_content" />
                <EditText
                    android:id="@+id/q2a2"
                    android:layout_margin="@dimen/_1sdp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:hint="Answer 2"
                    android:layout_height="wrap_content" />
                <EditText
                    android:id="@+id/q2a3"
                    android:layout_margin="@dimen/_1sdp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:hint="Answer 3"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <EditText
                android:id="@+id/q3"
                android:hint="Question 3"
                android:paddingLeft="@dimen/_5sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/q3a1"
                    android:layout_margin="@dimen/_1sdp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:hint="Answer 1"
                    android:layout_height="wrap_content" />
                <EditText
                    android:id="@+id/q3a2"
                    android:layout_margin="@dimen/_1sdp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:hint="Answer 2"
                    android:layout_height="wrap_content" />
                <EditText
                    android:id="@+id/q3a3"
                    android:layout_margin="@dimen/_1sdp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:hint="Answer 3"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <EditText
                android:id="@+id/q4"
                android:hint="Question 4"
                android:paddingLeft="@dimen/_5sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/q4a1"
                    android:layout_margin="@dimen/_1sdp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:hint="Answer 1"
                    android:layout_height="wrap_content" />
                <EditText
                    android:id="@+id/q4a2"
                    android:layout_margin="@dimen/_1sdp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:hint="Answer 2"
                    android:layout_height="wrap_content" />
                <EditText
                    android:id="@+id/q4a3"
                    android:layout_margin="@dimen/_1sdp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:hint="Answer 3"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <EditText
                android:id="@+id/q5"
                android:hint="Question 5"
                android:paddingLeft="@dimen/_5sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/q5a1"
                    android:layout_margin="@dimen/_1sdp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:hint="Answer 1"
                    android:layout_height="wrap_content" />
                <EditText
                    android:id="@+id/q5a2"
                    android:layout_margin="@dimen/_1sdp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:hint="Answer 2"
                    android:layout_height="wrap_content" />
                <EditText
                    android:id="@+id/q5a3"
                    android:layout_margin="@dimen/_1sdp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:hint="Answer 3"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <Button
                android:layout_marginTop="@dimen/_10sdp"
                android:onClick="upload_item"
                android:layout_marginBottom="@dimen/_10sdp"
                android:fontFamily="casual"
                android:background="@drawable/but"
                android:layout_gravity="center_horizontal"
                android:layout_width="@dimen/_150sdp"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/_15sdp"
                android:text="Submit"
                android:layout_height="@dimen/_50sdp" />

        </LinearLayout>

    </ScrollView>

</android.support.constraint.ConstraintLayout>